  <script>
    // Read ?name=BatchName and inject into headings
    (function(){
      const params = new URLSearchParams(location.search);
      const name = (params.get('name') || 'New Batch').trim();
      document.getElementById('batch-label').textContent = name;
      document.getElementById('batch-inline').textContent = name;

      // Simple "Add to Calendar" ICS generator (placeholder 30-min hold today+7 days at 9:00 AM)
      const addBtn = document.getElementById('add-calendar');
      if(addBtn){
        addBtn.addEventListener('click', function(e){
          e.preventDefault();
          const now = new Date();
          const start = new Date(now.getFullYear(), now.getMonth(), now.getDate() + 7, 9, 0, 0);
          const end = new Date(start.getTime() + 30 * 60000);
          const dt = (d)=>d.toISOString().replace(/[-:]/g,'').replace(/\.\d{3}Z$/,'Z');

          const ics = [
            'BEGIN:VCALENDAR',
            'VERSION:2.0',
            'PRODID:-//Sehr Academy//Coming Soon//EN',
            'BEGIN:VEVENT',
            'UID:' + (Date.now()) + '@sehracademy.com',
            'DTSTAMP:' + dt(new Date()),
            'DTSTART:' + dt(start),
            'DTEND:' + dt(end),
            'SUMMARY:' + 'Sehr Academy — ' + name + ' (Coming Soon)',
            'DESCRIPTION:' + 'Placeholder reminder for ' + name + ' launch updates. Contact: +91 9539409586',
            'END:VEVENT',
            'END:VCALENDAR'
          ].join('\r\n');

          const blob = new Blob([ics], {type: 'text/calendar;charset=utf-8'});
          const url = URL.createObjectURL(blob);
          const a = document.createElement('a');
          a.href = url;
          a.download = 'sehr-' + name.toLowerCase().replace(/\s+/g,'-') + '-coming-soon.ics';
          document.body.appendChild(a);
          a.click();
          URL.revokeObjectURL(url);
          a.remove();
        });
      }
    })();
  </script>
